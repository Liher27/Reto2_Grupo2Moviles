<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Reto2_Grupo2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>

    <style name="Theme.Reto2_Grupo2" parent="Base.Theme.Reto2_Grupo2" />

    <style name="background" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="calendarBackground" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@drawable/calendar_background</item>
    </style>

    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/light_blue </item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="ButtonFont" parent="Theme.Reto2_Grupo2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonsLightStyle1" parent="ButtonFont">
        <item name="android:backgroundTint">@color/dark_Blue</item>
    </style>

    <style name="ButtonsLightStyle2" parent="ButtonFont">
        <item name="android:backgroundTint">@color/mid_blue</item>
    </style>

    <style name="textBoxes" parent="Theme.Reto2_Grupo2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/mid_blue</item>
    </style>

    <style name="inputText" parent="Theme.Reto2_Grupo2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/mid_blue</item>
    </style>

    <style name="scrollViewStyle" parent="Theme.Reto2_Grupo2">
        <item name="android:background">@drawable/mainpanel_layer</item>
    </style>

    <style name="blackButton" parent="Theme.Reto2_Grupo2">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
</resources>